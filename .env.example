# Claude Token Resale System Configuration
# Copy this file to .env and fill in your actual values

# ============================================================================
# BOT CONFIGURATION
# ============================================================================
BOT_TOKEN=1234567890:ABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890
WEBHOOK_SECRET_TOKEN=your_webhook_secret_here
WEBHOOK_PATH=/webhook
WEBAPP_HOST=0.0.0.0
WEBAPP_PORT=8443
ADMIN_ID_LIST=123456789,987654321
SUPPORT_LINK=https://t.me/your_support_username

# ============================================================================
# OPENROUTER INTEGRATION
# ============================================================================
OPENROUTER_KEY=your_openrouter_api_key_here
OPENROUTER_URL=https://openrouter.ai/api/v1

# ============================================================================
# PAYMENT PROCESSING
# ============================================================================
PAYMENTS_PROVIDER_TOKEN=your_telegram_payments_token
CURRENCY=USD
# Supported: USD, EUR, RUB, INR

# Crypto Wallet Addresses (for fallback payments)
BTC_WALLET=bc1qxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
LTC_WALLET=ltc1qxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TON_WALLET=UQDxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
USDT_TRC20_WALLET=TRxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
DATABASE_URL=sqlite:///claude_tokens.db
# For PostgreSQL: postgresql://user:password@localhost/claude_tokens
# For MySQL: mysql://user:password@localhost/claude_tokens

# Database encryption (optional)
DB_ENCRYPTION=false
DB_PASS=your_database_password

# ============================================================================
# CRM INTEGRATION
# ============================================================================
WEBHOOK_URL=https://your-crm.com/webhook
WEBHOOK_SECRET=your_crm_webhook_secret

# ============================================================================
# GITHUB INTEGRATION (Optional)
# ============================================================================
GITHUB_PAT=ghp_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
GITHUB_USERNAME=your_github_username

# ============================================================================
# EMAIL CONFIGURATION (Optional)
# ============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password
EMAIL_FROM=ClaudeToken Team <noreply@your-domain.com>

# ============================================================================
# LOCALIZATION
# ============================================================================
BOT_LANGUAGE=en
# Supported: en, ru, zh

# ============================================================================
# REDIS CONFIGURATION (for rate limiting)
# ============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0

# ============================================================================
# ENVIRONMENT SETTINGS
# ============================================================================
RUNTIME_ENVIRONMENT=dev
# dev = development with ngrok
# prod = production with reverse proxy

# Development tools
NGROK_TOKEN=your_ngrok_token_here

# ============================================================================
# BUSINESS LOGIC
# ============================================================================
# Token pricing (in USD)
TOKEN_PRICE_PER_1K=0.50
DEFAULT_TOKEN_PACKAGE=10000
MAX_TOKEN_PACKAGE=100000

# Rate limiting
MAX_REQUESTS_PER_MINUTE=10
MAX_REQUESTS_PER_HOUR=100

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=INFO
LOG_FILE=claude_bot.log

# ============================================================================
# FEATURE FLAGS
# ============================================================================
ENABLE_CRYPTO_PAYMENTS=true
ENABLE_TELEGRAM_PAYMENTS=true
ENABLE_GITHUB_UPLOAD=false
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_CRM_SYNC=true

# ============================================================================
# ANALYTICS
# ============================================================================
ANALYTICS_ENABLED=true
ANALYTICS_WEBHOOK=https://your-analytics.com/webhook

# ============================================================================
# SECURITY
# ============================================================================
SECRET_KEY=your_secret_key_for_encryption
JWT_SECRET=your_jwt_secret_for_tokens
RATE_LIMIT_STORAGE=redis

# ============================================================================
# MONITORING
# ============================================================================
HEALTH_CHECK_ENDPOINT=/health
METRICS_ENDPOINT=/metrics
ENABLE_PROMETHEUS=false