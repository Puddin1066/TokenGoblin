# =============================================================================
# AUTOMATED TELEGRAM MARKETING SYSTEM CONFIGURATION
# =============================================================================

# -----------------------------------------------------------------------------
# TELEGRAM CONFIGURATION
# -----------------------------------------------------------------------------
# Get from https://my.telegram.org/apps
TELEGRAM_API_ID=your_api_id
TELEGRAM_API_HASH=your_api_hash
TELEGRAM_BOT_TOKEN=your_bot_token
TELEGRAM_PHONE_NUMBER=your_phone_number

# Bot Configuration
BOT_USERNAME=your_bot_username
WEBHOOK_HOST=https://your-domain.com
WEBHOOK_PATH=/webhook
WEBHOOK_SECRET_TOKEN=your_webhook_secret

# -----------------------------------------------------------------------------
# AI CONFIGURATION
# -----------------------------------------------------------------------------
# OpenAI API (for AI sales agent)
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=1000

# Anthropic Claude (alternative AI)
ANTHROPIC_API_KEY=your_anthropic_api_key

# Local AI Models (optional)
USE_LOCAL_AI=false
LOCAL_AI_MODEL_PATH=./models/sales_agent

# -----------------------------------------------------------------------------
# OPENROUTER CONFIGURATION
# -----------------------------------------------------------------------------
# OpenRouter API (for creating customer tokens)
OPENROUTER_API_KEY=your_openrouter_api_key
OPENROUTER_API_URL=https://openrouter.ai/api/v1
OPENROUTER_PROFIT_MARGIN=300  # 300% markup

# -----------------------------------------------------------------------------
# DATABASE CONFIGURATION
# -----------------------------------------------------------------------------
# PostgreSQL (recommended for production)
DATABASE_URL=postgresql://user:password@localhost:5432/telegram_marketing

# SQLite (for development)
SQLITE_DATABASE_URL=sqlite:///./data/marketing.db

# Current database type
DATABASE_TYPE=postgresql  # or sqlite

# -----------------------------------------------------------------------------
# REDIS CONFIGURATION
# -----------------------------------------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0

# -----------------------------------------------------------------------------
# PAYMENT PROCESSING
# -----------------------------------------------------------------------------
# Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Crypto Payments
CRYPTO_WALLET_ADDRESS=your_crypto_wallet_address
CRYPTO_NETWORK=ethereum  # or bitcoin, polygon, etc.

# -----------------------------------------------------------------------------
# MARKETING AUTOMATION SETTINGS
# -----------------------------------------------------------------------------
# Lead Generation
DAILY_PROSPECT_LIMIT=100
CONVERSATION_LIMIT=25
MESSAGES_PER_HOUR=10
MIN_QUALIFICATION_SCORE=60

# Target Groups (comma-separated)
TARGET_TELEGRAM_GROUPS=AI_developers,MachineLearning,OpenAI_community,ChatGPT_developers,AIStartups,StartupFounders

# Pricing Configuration
BASE_PRICE_GPT4=8.00
BASE_PRICE_CLAUDE=6.00
BASE_PRICE_GPT35=2.00
DYNAMIC_PRICING_ENABLED=true

# -----------------------------------------------------------------------------
# SALES AGENT CONFIGURATION
# -----------------------------------------------------------------------------
SALES_AGENT_NAME=Alex
SALES_AGENT_ROLE=AI Solutions Consultant
SALES_AGENT_PERSONALITY=professional
CONVERSATION_TIMEOUT=3600  # 1 hour in seconds

# -----------------------------------------------------------------------------
# SYSTEM CONFIGURATION
# -----------------------------------------------------------------------------
# Application Settings
APP_NAME=Telegram Marketing Automation
APP_VERSION=1.0.0
DEBUG=false
LOG_LEVEL=INFO

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=4

# File Storage
DATA_DIR=./data
LOGS_DIR=./logs
TEMP_DIR=./temp

# -----------------------------------------------------------------------------
# MONITORING & ANALYTICS
# -----------------------------------------------------------------------------
# Revenue Targets
DAILY_REVENUE_TARGET=100.00
MONTHLY_REVENUE_TARGET=3000.00

# Performance Metrics
ENABLE_METRICS=true
METRICS_PORT=9090

# -----------------------------------------------------------------------------
# SECURITY SETTINGS
# -----------------------------------------------------------------------------
# JWT Configuration
JWT_SECRET_KEY=your_jwt_secret_key
JWT_ALGORITHM=HS256
JWT_EXPIRATION=86400  # 24 hours

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600  # 1 hour

# -----------------------------------------------------------------------------
# NOTIFICATION SETTINGS
# -----------------------------------------------------------------------------
# Admin Notifications
ADMIN_TELEGRAM_IDS=123456789,987654321
NOTIFICATION_CHANNEL=@your_notification_channel

# Email Notifications (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# -----------------------------------------------------------------------------
# FEATURE FLAGS
# -----------------------------------------------------------------------------
ENABLE_TELEGRAM_CRAWLER=true
ENABLE_AI_SALES_AGENT=true
ENABLE_DYNAMIC_PRICING=true
ENABLE_PAYMENT_PROCESSING=true
ENABLE_ANALYTICS=true
ENABLE_AUTOMATION=true

# -----------------------------------------------------------------------------
# DEVELOPMENT SETTINGS
# -----------------------------------------------------------------------------
# Testing
TEST_MODE=false
MOCK_PAYMENTS=false
SIMULATE_CONVERSATIONS=false

# Performance
ASYNC_WORKERS=10
DATABASE_POOL_SIZE=20
CONNECTION_TIMEOUT=30